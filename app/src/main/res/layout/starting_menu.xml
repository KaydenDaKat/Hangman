<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".StartingMenu">

    <Button
        android:id="@+id/button_singleplayer_startmenu"
        android:layout_width="121dp"
        android:layout_height="75dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="145dp"
        android:text="Single Player"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_title_startmenu" />

    <Button
        android:id="@+id/button_duo_startmenu"
        android:layout_width="121dp"
        android:layout_height="75dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="145dp"
        android:text="Duo"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/squircle"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_singleplayer_startmenu" />

    <TextView
        android:id="@+id/textView_title_startmenu"
        android:layout_width="290dp"
        android:layout_height="99dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="86dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Kaydong's Hangman"
        android:textColor="@color/darkText"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>